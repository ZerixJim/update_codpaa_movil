<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.codpaa"
    android:versionCode="32"
    android:versionName="1.0.32" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MiTema" >
        <activity
            android:name="com.codpaa.Lanzador"
            android:label="@string/nombreAplicacion"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.codpaa.MainActivity"
            android:label="@string/nombreAplicacion"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.codpaa.MenuPrincipal"
            android:label="@string/nombreAplicacion"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.codpaa.MenuTienda"
            android:label="@string/nombreAplicacion"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.codpaa.MostrarCalendario"
            android:icon="@drawable/ic_launcher"
            android:label="@string/ruta"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.codpaa.ListarLocation"
            android:label="@string/nombreAplicacion"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.codpaa.EnviarInformacion"
            android:label="@string/enviar"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.codpaa.Frentes"
            android:label="@string/frentes"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.codpaa.SurtidoMueble"
            android:label="@string/surtido"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.codpaa.Exhibiciones"
            android:label="@string/exhi"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.codpaa.InventarioBodega"
            android:label="@string/inventario"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.codpaa.ComentariosActivity"
            android:label="@string/comentienda"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.codpaa.InteligenciaMercado"
            android:label="@string/inteligencia"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.codpaa.Mayoreo"
            android:label="@string/cajasmayoreo"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.codpaa.PhotoCapture"
            android:label="@string/capIma"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.codpaa.Imagesheduler"
            android:label="@string/nombreAplicacion"
            android:screenOrientation="portrait" />

        <service android:name="com.codpaa.GeoLocalizar" />
    </application>

</manifest>