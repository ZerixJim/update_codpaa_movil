<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <FrameLayout
            style="@style/btnStyleShakespeare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false" >

            <TextView
                android:id="@+id/textView1"
                style="@style/TextShadow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ruta1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/blanco2" />

            <Button
                android:id="@+id/btncalendario"
                style="@style/btnStyleShakespeare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="6dp"
                android:text="@string/back" />

        </FrameLayout>

        <HorizontalScrollView
            android:id="@+id/HorizontalScrollView1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scrollbars="horizontal"
            tools:ignore="HardcodedText,UselessParent,ScrollViewSize" >

            <TableLayout
                android:id="@+id/tablaCalendario"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/TextView01"
                        style="@style/TextShadow"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/border"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Lunes"
                        android:textColor="@color/Blanco" />

                    <TextView
                        android:id="@+id/TextView02"
                        style="@style/TextShadow"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/border"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Martes"
                        android:textColor="@color/Blanco" />

                    <TextView
                        android:id="@+id/TextView03"
                        style="@style/TextShadow"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/border"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Miercoles"
                        android:textColor="@color/Blanco" />

                    <TextView
                        android:id="@+id/TextView04"
                        style="@style/TextShadow"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/border"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Jueves"
                        android:textColor="@color/Blanco" />

                    <TextView
                        android:id="@+id/TextView05"
                        style="@style/TextShadow"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/border"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Viernes"
                        android:textColor="@color/Blanco" />

                    <TextView
                        android:id="@+id/TextView06"
                        style="@style/TextShadow"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/border"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Sabado"
                        android:textColor="@color/Blanco" />

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <ScrollView
                        android:id="@+id/scrollView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <LinearLayout
                            android:id="@+id/colunes"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical" >
                        </LinearLayout>
                    </ScrollView>

                    <ScrollView
                        android:id="@+id/scrollView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <LinearLayout
                            android:id="@+id/columnaMartes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >
                        </LinearLayout>
                    </ScrollView>

                    <ScrollView
                        android:id="@+id/scrollView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <LinearLayout
                            android:id="@+id/columnaMiercoles"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >
                        </LinearLayout>
                    </ScrollView>

                    <ScrollView
                        android:id="@+id/scrollView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <LinearLayout
                            android:id="@+id/columnaJueves"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >
                        </LinearLayout>
                    </ScrollView>

                    <ScrollView
                        android:id="@+id/scrollView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <LinearLayout
                            android:id="@+id/columnaViernes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >
                        </LinearLayout>
                    </ScrollView>

                    <ScrollView
                        android:id="@+id/scrollView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <LinearLayout
                            android:id="@+id/columnaSabado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >
                        </LinearLayout>
                    </ScrollView>
                </TableRow>
            </TableLayout>
        </HorizontalScrollView>

    </LinearLayout>


