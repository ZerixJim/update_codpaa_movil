<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent" >

        <ImageView
            android:id="@+id/imgfoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/logo"
            android:src="@drawable/logol" />

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            tools:ignore="UselessParent" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                tools:ignore="ScrollViewSize" >

                <TextView
                    android:id="@+id/bienvenido"
                    style="@style/TextShadow"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:gravity="left"
                    android:text="@string/user"
                    android:textColor="@color/Blanco"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/nombreEnca"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@color/Azul3"
                    android:ems="10"
                    android:hint="@string/escribeU"
                    android:inputType="text"
                    android:maxLength="10"
                    android:paddingLeft="20dp"
                    android:textColor="@color/negroFondo" >

                    <requestFocus />
                </EditText>

                <TextView
                    android:id="@+id/txtnomUser"
                    style="@style/TextShadow"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:text="@string/pass"
                    android:textColor="@color/Blanco"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editCha2"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@color/Azul3"
                    android:ems="10"
                    android:hint="@string/escribeP"
                    android:numeric="integer"
                    android:paddingLeft="20dp"
                    android:password="true"
                    android:textColor="@color/negroFondo"
                    tools:ignore="TextFields,Deprecated"
                    android:maxLength="10" />

                <TextView
                    android:id="@+id/valido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    style="@style/TextShadow" />

                <ProgressBar
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/progressUser"
                    android:layout_gravity="center_horizontal" />

                <Button
                    android:id="@+id/buttonlogin"
                    style="@style/btnStyleGenoa"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/start"
                    android:padding="30dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout><!-- From: file:/C:/Users/usuario/workspace/CODPAA/res/layout/activity_main.xml -->