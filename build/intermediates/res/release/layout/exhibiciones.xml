<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_gris" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/degradado"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/ExhiPromo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/Azul4" />

            <TextView
                android:id="@+id/ExhiTienda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/naranjaClaro" />

        </LinearLayout>

        <TextView
            android:id="@+id/idMarca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/stringMarca"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Spinner
            android:id="@+id/spiExhMarca"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/sombra_caja" />

        <TextView
            android:id="@+id/textInvPromo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/produ"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
            android:id="@+id/spiExhProd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sombra_caja" />

        <TextView
            android:id="@+id/textSalida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/exhibicion"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
            android:id="@+id/spiExhibi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sombra_caja" />

        <TextView
            android:id="@+id/textInvTie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="@string/porc"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
            android:id="@+id/spinnerNumeros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/cantidadExhibicion"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnGuaEx"
            style="@style/btnStyleShakespeare"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/save"
            android:text="@string/guar" />

        <Button
            android:id="@+id/bntSaEnvi"
            style="@style/btnStyleOrange"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/exit" />

    </LinearLayout>

</ScrollView>
