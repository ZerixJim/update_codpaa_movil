<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/Blue">

            <TextView
                android:id="@+id/textSurT"
                style="@style/TextShadow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/AmarilloClaro" />

            <TextView
                android:id="@+id/textSuser"
                style="@style/TextShadow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Blanco" />
        </LinearLayout>

        <TextView
            android:id="@+id/textExhibicio"
            style="@style/btnStyleGenoa"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="@string/stringMarca"
            android:textColor="@color/Blanco"
            android:textSize="20sp"
            android:textStyle="bold"
            android:clickable="false" />

    <Spinner
        android:id="@+id/spiSurM"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="2dp" />

    <TextView
        android:id="@+id/textInvPromo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/produ"
        android:textColor="@color/Blanco"
        android:textSize="16sp"
        android:textStyle="bold"
        android:clickable="false"
        style="@style/btnStyleGenoa" />

    <Spinner
        android:id="@+id/spiSurP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2" android:baselineAligned="false"
        android:background="@color/Blanco"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textSalida"
                style="@style/TextShadow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="@string/necesario"
                android:textColor="@color/negroFondo"
                android:textSize="16sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/radio0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/yes" />

                <RadioButton
                    android:id="@+id/radio1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/ExhiTienda"
                style="@style/TextShadow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="@string/StringCantidadFre"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/negroFondo" />

            <EditText
                android:id="@+id/editSur"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:inputType="number"
                android:maxLength="2" >

                <requestFocus />
            </EditText>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnGurSur"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/save"
        android:text="@string/guar"
        style="@style/btnStyleShakespeare"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp" />

    <Button
        android:id="@+id/btnExit"
        style="@style/btnStyleOrange"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/exit"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp" />
        
    </LinearLayout>


</ScrollView>
