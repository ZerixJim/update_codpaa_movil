<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Azul3"
            android:orientation="vertical"
            tools:ignore="UselessParent" >

            <TextView
                android:id="@+id/textInvTie"
                style="@style/TextShadow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textInvPromo"
                style="@style/TextShadow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <Spinner
            android:id="@+id/spiInMar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Blanco"
            android:layout_margin="3dp" />

        <Spinner
            android:id="@+id/spiInvPro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Blanco"
            android:layout_margin="3dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@color/Blanco"
            android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/tipo"
                android:id="@+id/tipoText"
                android:layout_gravity="center_horizontal"
                style="@style/TextShadow" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:id="@+id/radioInventario">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pieza"
                    android:id="@+id/radioTipo1" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cajas"
                    android:id="@+id/radioTipo2" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="2"
            android:baselineAligned="false"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@color/Blanco"
                android:layout_margin="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/fisico"
                    android:id="@+id/textViewRowProducto"
                    android:layout_gravity="center_horizontal"
                    style="@style/TextShadow" />

                <EditText
                    android:id="@+id/editInv"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:gravity="center_vertical|center_horizontal"
                    android:hint="@string/cant"
                    android:inputType="number"
                    android:maxLength="3" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@color/Blanco"
                android:layout_margin="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/systema"
                    android:id="@+id/textViewRowMarca"
                    android:layout_gravity="center_horizontal"
                    style="@style/TextShadow" />

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/editSistema"
                    android:layout_gravity="center_horizontal"
                    android:hint="@string/cant"
                    android:maxLength="4" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/bInvGuar"
            style="@style/btnStyleShakespeare"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:drawableLeft="@drawable/save"
            android:text="@string/guar"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp" />

        <Button
            android:id="@+id/bInvSalir"
            style="@style/btnStyleOrange"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/exit"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp" />

    </LinearLayout>

</ScrollView>