<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_frentes"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:subtitleTextAppearance="@style/ToolbarSubtitleAppearance"
        app:titleTextAppearance="@style/ToolbarTitleAppearance"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:elevation="4dp"
        android:layout_height="wrap_content">

    </android.support.v7.widget.Toolbar>


    <ScrollView

        android:id="@+id/ScrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Blanco"
        tools:ignore="UselessParent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">




            <Spinner
                android:id="@+id/spinnerMarFre"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:theme="@style/MiTema"
                android:layout_marginTop="15dp"/>

            <Spinner
                android:id="@+id/spinnerFrePro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/MiTema"
                android:layout_margin="2dp" />

            <TextView
                android:id="@+id/textSalida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:clickable="false"
                android:text="@string/stringCharo"
                android:textSize="16sp"
                android:textStyle="bold" />


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnf1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cha1"
                        android:textStyle="bold"
                        android:layout_weight="1"/>

                    <EditText
                        android:id="@+id/editCha1"
                        android:layout_width="wrap_content"
                        android:maxLength="2"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColor="@color/negroFondo"
                        android:layout_weight="1"/>


                    <Button
                        android:id="@+id/btnfoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cha4"
                        android:textStyle="bold"
                        android:layout_weight="1"/>

                    <EditText
                        android:id="@+id/editCha4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="2"
                        android:inputType="number"
                        android:textColor="@color/negroFondo"
                        android:layout_weight="1"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/btn_charola_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cha2"
                        android:textStyle="bold"
                        android:layout_weight="1"/>

                    <EditText
                        android:id="@+id/editCha2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="2"
                        android:inputType="number"
                        android:textColor="@color/negroFondo"
                        android:layout_weight="1"/>

                    <Button
                        android:id="@+id/btnf5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cha5"
                        android:textStyle="bold"
                        android:layout_weight="1"/>

                    <EditText
                        android:id="@+id/editCha5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="2"
                        android:inputType="number"
                        android:textColor="@color/negroFondo"
                        android:layout_weight="1"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/btnf3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cha3"
                        android:textStyle="bold"
                        android:layout_weight="1"/>

                    <EditText
                        android:id="@+id/editCha3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="2"
                        android:inputType="number"
                        android:textColor="@color/negroFondo"
                        android:layout_weight="1"/>

                    <Button
                        android:id="@+id/btnf6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cha6"
                        android:textStyle="bold"
                        android:layout_weight="1"/>

                    <EditText
                        android:id="@+id/editCha6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="2"
                        android:inputType="number"
                        android:textColor="@color/negroFondo"
                        android:layout_weight="1"/>

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btonChFr"
                style="@style/btnStyleShakespeare"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:drawableLeft="@drawable/save"
                android:drawableStart="@drawable/save"
                android:text="@string/guar"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>

