<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:id="@+id/logotipoMarca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <TextView

        android:id="@+id/NombreTxtMarca"
        android:text="Marca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        />

    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:id="@+id/DescriTxtMarca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NombreTxtMarca"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_toEndOf="@+id/logotipoMarca"
        android:layout_toRightOf="@+id/logotipoMarca"
        />
</RelativeLayout>