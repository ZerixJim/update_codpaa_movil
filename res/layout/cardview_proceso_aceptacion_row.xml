<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_horizontal_margin">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin">


        <TextView
            android:id="@+id/estatus_proceso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9c9c9c"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/estatus_registro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/cantidad"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />


        <TextView
            android:id="@+id/producto_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/estatus_proceso"
            android:layout_marginTop="15dp"
            android:text="nombre producto" />

        <TextView
            android:id="@+id/presentacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/producto_nombre"
            android:text="presentacion" />

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/presentacion"
            android:layout_marginTop="15dp">


            <RadioButton
                android:id="@+id/sin_pedir_vendedor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sin pedir al vendedor" />

            <RadioButton
                android:id="@+id/ya_pedido_vendedor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ya pedida al vendedor" />

            <RadioButton
                android:id="@+id/producto_sin_llegar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Producto sin llegar" />


        </RadioGroup>


        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />


        <EditText
            android:id="@+id/cantidad_entrega"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radio_group"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/cantidad"
            android:layout_toStartOf="@+id/cantidad"
            android:hint="Cantidad entregada"
            android:inputType="number"
            android:textColor="#898989"
            android:visibility="gone" />


    </RelativeLayout>


</android.support.v7.widget.CardView>