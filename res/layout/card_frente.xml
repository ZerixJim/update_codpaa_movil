<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/producto_informacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical">


            <TextView
                android:id="@+id/nombre_producto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:maxEms="8"
                android:minEms="8"
                android:text="Nombre Producto"/>

            <TextView
                android:id="@+id/presentacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Presentacion"/>

            <TextView
                android:id="@+id/codigo_barras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="codigo de barras" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                />


        </LinearLayout>

        <TextView
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/divider_vertical"
            android:layout_toRightOf="@+id/producto_informacion"
            android:layout_toEndOf="@+id/producto_informacion"
            android:layout_alignBottom="@+id/producto_informacion"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp" />

        <TextView
            android:id="@+id/txt_captura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:text="Captura"
            android:layout_toRightOf="@+id/divider"
            android:layout_toEndOf="@+id/divider"/>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_toRightOf="@+id/divider"
            android:layout_toEndOf="@+id/divider"
            android:layout_below="@+id/txt_captura"/>


        <LinearLayout
            android:id="@+id/list_charolas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner"
            android:visibility="gone"
            android:layout_toRightOf="@+id/divider"
            android:layout_toEndOf="@+id/divider"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <EditText
                    android:id="@+id/c1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/cha1"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/c4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/cha4"
                    android:layout_weight="1"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <EditText
                    android:id="@+id/c2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/cha2"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/c5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/cha5"
                    android:layout_weight="1"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <EditText
                    android:id="@+id/c3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/cha3"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/c6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/cha6"
                    android:layout_weight="1"/>


            </LinearLayout>



        </LinearLayout>



        <LinearLayout
            android:id="@+id/list_filas"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_below="@+id/spinner"
            android:layout_toEndOf="@+id/divider"
            android:layout_toRightOf="@+id/divider">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2">

                <EditText
                    android:id="@+id/unifila"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Unifila"
                    android:inputType="number"
                    android:maxLength="4"
                    android:maxLines="1" />

                <EditText

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Caja 8"
                    android:layout_weight="1"
                    android:lines="1"
                    android:visibility="invisible"
                    android:inputType="number"
                    android:maxLength="4"
                    android:maxLines="1"/>


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2">

                <EditText
                    android:id="@+id/caja1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Caja 1"
                    android:lines="1"
                    android:inputType="number"
                    android:maxLength="4"
                    android:maxLines="1"/>

                <EditText
                    android:id="@+id/caja8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Caja 8"
                    android:layout_weight="1"
                    android:lines="1"
                    android:inputType="number"
                    android:maxLength="4"
                    android:maxLines="1"/>


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2">

                <EditText
                    android:id="@+id/caja2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Caja 2"
                    android:lines="1"
                    android:inputType="number"
                    android:maxLength="4"
                    android:maxLines="1"/>

                <EditText
                    android:id="@+id/caja9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Caja 9"
                    android:layout_weight="1"
                    android:lines="1"
                    android:inputType="number"
                    android:maxLength="4"
                    android:maxLines="1"/>


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2">

                <EditText
                    android:id="@+id/caja3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Caja 3"
                    android:lines="1"
                    android:inputType="number"
                    android:maxLength="4"
                    android:maxLines="1"/>

                <EditText
                    android:id="@+id/caja10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Caja 10"
                    android:layout_weight="1"
                    android:lines="1"
                    android:inputType="number"
                    android:maxLength="4"
                    android:maxLines="1"/>


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2">

                <EditText
                    android:id="@+id/caja4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Caja 4"
                    android:lines="1"
                    android:inputType="number"
                    android:maxLength="4"
                    android:maxLines="1"/>

                <EditText
                    android:id="@+id/caja11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Caja 11"
                    android:layout_weight="1"
                    android:lines="1"
                    android:inputType="number"
                    android:maxLength="4"
                    android:maxLines="1"/>


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2">

                <EditText
                    android:id="@+id/caja5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Caja 5"
                    android:lines="1"
                    android:inputType="number"
                    android:maxLength="4"
                    android:maxLines="1"/>

                <EditText
                    android:id="@+id/caja12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Caja 12"
                    android:layout_weight="1"
                    android:lines="1"
                    android:inputType="number"
                    android:maxLength="4"
                    android:maxLines="1"/>


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2">

                <EditText
                    android:id="@+id/caja6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Caja 6"
                    android:lines="1"
                    android:inputType="number"
                    android:maxLength="4"
                    android:maxLines="1"/>

                <EditText
                    android:id="@+id/caja13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Caja 13"
                    android:layout_weight="1"
                    android:lines="1"
                    android:inputType="number"
                    android:maxLength="4"
                    android:maxLines="1"/>


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2">

                <EditText
                    android:id="@+id/caja7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Caja 7"
                    android:lines="1"
                    android:inputType="number"
                    android:maxLength="4"
                    android:maxLines="1"/>

                <EditText
                    android:id="@+id/caja14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Caja 14"
                    android:layout_weight="1"
                    android:lines="1"
                    android:inputType="number"
                    android:maxLength="4"
                    android:maxLines="1"/>


            </LinearLayout>

        </LinearLayout>















    </RelativeLayout>


</android.support.v7.widget.CardView>