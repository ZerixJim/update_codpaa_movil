<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="15dp"/>
    <TextView
        android:id="@+id/nombre_material"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image"
        android:layout_toEndOf="@+id/image"
        android:layout_toStartOf="@+id/txt_fecha"
        android:layout_toLeftOf="@+id/txt_fecha"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/txt_fecha"
        android:layout_alignTop="@+id/image"
        android:layout_marginTop="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nombre de Material"/>

    <TextView
        android:id="@+id/txt_fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="5dp"
        android:text="fecha"/>

    <TextView
        android:id="@+id/producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nombre_material"
        android:layout_alignLeft="@+id/nombre_material"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:visibility="gone"
        android:text="Nombre Producto"
        android:layout_alignStart="@+id/nombre_material"/>


    <TextView
        android:id="@+id/cantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/producto"
        android:layout_alignLeft="@+id/nombre_material"
        android:layout_alignStart="@+id/nombre_material"
        android:text="1 pieza"/>

    <TextView
        android:id="@+id/status"
        android:text="Estatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cantidad"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:textAppearance="?android:attr/textAppearanceSmall"/>


</RelativeLayout>