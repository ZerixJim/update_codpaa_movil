<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="2dp" />
             <stroke android:width="1dip" android:color="#36797f" />
             <gradient  android:angle="-90"  android:startColor="@color/blue_primary_dark" android:endColor="@color/blue_primary"  />
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners android:radius="2dp" />
             <stroke android:width="1dip" android:color="#36797f" />
             <solid  android:color="#308d9e"/>      
         </shape>
     </item> 
    <item >
        <shape android:shape="rectangle"  >
             <corners android:radius="2dp" />
             <stroke android:width="1dip" android:color="#36797f" />
             <solid android:color="@color/blue_primary" />
         </shape>
     </item>
</selector>